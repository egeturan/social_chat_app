<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorBackgroundFloating"
        tools:context=".ContactsFragment">


        <ImageView
            android:id="@+id/mainViewOfPage"
            android:layout_width="match_parent"
            android:layout_height="248dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:src="@drawable/login_photo" />

        <TextView
            android:id="@+id/entranceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mainViewOfPage"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:text="İstediğiniz danışman türünü aşağıdan seçebilirsiniz"
            android:textSize="26sp"
            android:textStyle="bold"
            tools:ignore="UnknownId" />

        <Button
            android:id="@+id/buttonOfHealthSpecialist"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/entranceText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@android:color/holo_green_light"
            android:text="uzman_doktor" />

        <Button
            android:id="@+id/buttonForDietitian"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonOfHealthSpecialist"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@android:color/holo_green_light"
            android:text="@string/diyetisyen" />

        <Button
            android:id="@+id/buttonForSportTeacher"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonForDietitian"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@android:color/holo_green_light"
            android:text="Spor Hocası" />

        <Button
            android:id="@+id/buttonForPsychlolog"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonForSportTeacher"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@android:color/holo_green_light"
            android:text="Psikolog" />


    </RelativeLayout>

</ScrollView>